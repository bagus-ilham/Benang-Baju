        customize: {
          //  "template": fs.readFileSync('template.html', 'base64') // Must be base64 encoded html
        },
        images: {
          // The logo on top of your invoice
          logo: "/image/logobenangbaju.jpeg",
          // The invoice background
          background: "https://public.budgetinvoice.com/img/watermark-draft.jpg",
        },
        // Your own data
        sender: {
          company: "BenangBaju",
          address: "Bandung",
          zip: "1234 AB",
          city: "Bandung",
          country: "Indonesia",
          //"custom1": "custom value 1",
          //"custom2": "custom value 2",
          //"custom3": "custom value 3"
        },
        // Your recipient
        client: {
          company: "<%= data[0].Profile.name%>",
          address: "<%= data[0].Profile.address%>",
          zip: "4567 CD",
          city: "<%= data[0].Profile.address%>",
          country: "<%=data[0].Profile.address%>",
          // "custom1": "custom value 1",
          // "custom2": "custom value 2",
          // "custom3": "custom value 3"
        },
        information: {
          // Invoice number
          number: "2021.0001",
          // Invoice data
          date: "22-12-2023",
          // Invoice due date
          "due-date": "22-12-2023",
