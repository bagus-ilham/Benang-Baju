<%- include("./partials/_header") %>

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form style="width: 23rem;" action="" method="post">
                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>
                        <div class="form-outline mb-4">
                            <input type="email" class="form-control form-control-lg" name="email"/>
                            <label class="form-label" for="email">Email address</label>
                        </div>
                        <div class="form-outline mb-4">
                            <input type="password" class="form-control form-control-lg" name="password"/>
                            <label class="form-label" for="password">Password</label>
                        </div>

                        
                        <div class="form-check">
                            <p>Role</p>
                            <input class="form-check-input" type="radio" name="role" value="admin">
                            <label class="form-check-label" for="admin">
                              Seller
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="role" value="user">
                            <label class="form-check-label" for="user">
                              Customers
                            </label>
                          </div>

                          <br>
                        <div class="pt-1 mb-4">
                            <button class="btn btn-secondary btn-lg btn-block" type="submit">Register</button>
                        </div>

                        <p class="small mb-5 pb-lg-2"></p>
                        <p>Have an account? <a href="/login" class="text-secondary">Login here</a></p>
                    </form>
                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://down-id.img.susercontent.com/file/id-11134207-7r98p-ll4qbz9vnlpn1a"
                    alt="Login image" class="w-800 vh-100 " style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

<%- include("./partials/_footer") %>